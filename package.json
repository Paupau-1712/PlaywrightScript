{
  "name": "use_typescript2",
  "version": "1.0.1",
  "description": "Playwright Excel-driven test automation framework",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:headless": "HEADLESS=true playwright test",
    "test:chrome": "playwright test --project=Chrome",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "report": "playwright show-report",
    "clean": "rm -rf test-results playwright-report screenshots/*/",
    "ci": "HEADLESS=true playwright test",
    "install:browsers": "npx playwright install --with-deps chromium"
  },
  "keywords": ["playwright", "testing", "automation", "excel"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.54.1",
    "@types/node": "^24.10.0",
    "chromedriver": "^142.0.1"
  },
  "dependencies": {
    "selenium-webdriver": "^4.38.0",
    "xlsx": "^0.18.5"
  }
}
